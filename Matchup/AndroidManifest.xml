<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecea2"
    android:versionCode="1"
    android:versionName="1.0" 
    >
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.matchup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.matchup.EnterNameActivity"
            android:label="@string/title_activity_enter_name" >
        </activity>
        <activity
            android:name="com.example.matchup.EnterFilenameActivity"
            android:label="@string/title_activity_enter_filename"
            android:parentActivityName="com.example.matchup.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ecea2.MainActivity" />
        </activity>
        <activity
            android:name="com.example.matchup.LoadActivity"
            android:label="@string/title_activity_load" >
        </activity>
        <activity
            android:name="com.example.matchup.ShowfileActivity"
            android:label="@string/title_activity_showfile" >
        </activity>
        <activity
            android:name="com.example.matchup.AllFileActivity"
            android:label="@string/title_activity_all_file" >
        </activity>
        <activity
            android:name="com.example.matchup.DatabaseActivity"
            android:label="@string/title_activity_database" >
        </activity>
        <activity
            android:name="com.example.matchup.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name="com.example.matchup.ShowFilterActivity"
            android:label="@string/title_activity_show_filter" >
        </activity>
    </application>

</manifest>
